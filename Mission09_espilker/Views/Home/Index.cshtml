@{
    ViewData["Title"] = "Home Page";
}
@model BooksViewModel 

<div class="text-left">
    <h1 class="display-4">Welcome</h1>
    @foreach (Book b in Model.Books)
    {
        <h4>@b.Title</h4>
        <ul style="list-style-type: none; margin: 0; padding: 0;">
            <li>Title: @b.Title</li>
            <li>Author: @b.Author</li>
            <li>Publisher: @b.Publisher</li>
            <li>ISBN: @b.Isbn</li>
            <li>Classification: @b.Classification</li>
            <li>Category: @b.Category</li>
            <li>Pages: @b.PageCount</li>
            <li>Price: @b.Price</li>
        </ul>
        <br />
    }
    <br />

    <div pagination-tag="@Model.PageInfo" page-action="Index" page-classes-enabled="true"
         page-class="btn" page-class-normal="btn-outline-dark"
         page-class-selected="btn-primary" class="btn-group pull-right m-1">
    </div>
</div>

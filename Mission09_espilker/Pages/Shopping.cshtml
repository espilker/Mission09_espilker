@page
@model Mission09_espilker.Pages.ShoppingModel
@{
}


<h2>Your Cart</h2>
<style>

    a {

        animation-name: example;
        animation-duration: 10s;
    }

    img {
        width: 100px;
        height: 100px;
        position: relative;
       
        animation-name: move;
        animation-duration: 4s;
    }

    @@keyframes example {
        from {
            background-color: midnightblue;
        }

        to {
            background-color: palegreen;
        }
    }

    @@keyframes move {
        0% {
            left: 0px;
            top: 0px;
        }

        25% {
            left: 200px;
            top: 0px;
        }

        50% {
            left: 200px;
            top: 200px;
        }

        75% {
            left: 0px;
            top: 200px;
        }

        100% {
            left: 0px;
            top: 0px;
        }
    }
</style>


<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Book</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Subtotal</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var i in Model.basket.Items)
        {
            <tr>
                <td>@i.Book.Title</td>
                <td>@i.Quantity</td>
                <td>@i.Book.Price</td>
                <td>@((i.Quantity * i.Book.Price).ToString("c"))</td>

                <td class="text-center">
                    <form method="post" asp-page-handler="Remove">
                        <input type="hidden" name="bookId" value="@i.Book.BookId" />
                        <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                        <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                    
                    </form>
                </td>
            </tr>
        }
    </tbody>

    <tfoot>
        <tr>
            <td colspan="3">Total:</td>
            <td>@Model.basket.CalculateTotal().ToString("c")</td>
        </tr>
    </tfoot>
</table>

<div>
    <a class="btn btn-primary" style="background-color:palegreen" href="@Model.ReturnUrl">Continue Shopping</a>
    <a class="btn btn-primary" style="background-color:palegreen" asp-controller="Checkout" asp-action="CheckoutPage" >Checkout</a>
</div>


<br />
<img src="~/img/cart.png" width="20" height="20" />
